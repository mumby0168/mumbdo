@inherits LayoutComponentBase

<style>
    .root {
        padding-top: 90px;
        height: 100%;
        overflow-y: auto;
    }
    .drawer {
        padding-top: 65px;
    }
    .con {
        height: 100%;
    }
</style>


<MudThemeProvider Theme="@Theme" />
<MudDialogProvider FullWidth="true" />
<MudSnackbarProvider />
<MudAppBar>
    <MudIconButton Icon="@Icons.Material.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleOpen" />
    <MudText Typo="Typo.h6">Mumbdo</MudText>
</MudAppBar>
<MudDrawer class="drawer" @bind-Open="@Open">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Mumbdo</MudText>
    </MudDrawerHeader>
</MudDrawer>
<MudPaper class="root">
    <MudContainer class="con">
        <AuthenticationProvider>
            @Body
        </AuthenticationProvider>
    </MudContainer>
</MudPaper>

@code {
    MudTheme Theme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = Colors.Blue.Darken2,
            Secondary = Colors.Orange.Darken3,
            Black = "#27272f",
            Background = "#3d3e47",
            BackgroundGrey = "#27272f",
            Surface = "#373740",
            DrawerBackground = "#27272f",
            DrawerText = "rgba(255,255,255, 0.50)",
            DrawerIcon = "rgba(255,255,255, 0.50)",
            AppbarBackground = Colors.Blue.Darken2,
            AppbarText = "#fff",
            TextPrimary = "#fff",
            ActionDefault = "#adadb1",
            ActionDisabled = "rgba(255,255,255, 0.26)",
            ActionDisabledBackground = "rgba(255,255,255, 0.12)"
        }
    };

    bool Open { get; set; }

    void ToggleOpen() => Open = !Open;
}
