@using _Imports = Mumbdo.Web._Imports

<MatAppBarContainer>
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatIconButton OnClick="() => SetDrawerOpen(true)" Icon="menu"></MatIconButton>
                <MatAppBarTitle>Mumbdo</MatAppBarTitle>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>
</MatAppBarContainer>

<SideMenu IsOpen="@IsDrawerOpen" SetOpenChanged="@SetDrawerOpen"/>

@code {
    bool IsDrawerOpen { get; set; }

    private void SetDrawerOpen(bool value)
    {
        IsDrawerOpen = value;
        StateHasChanged();
    }
}